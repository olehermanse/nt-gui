{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ]
    },
    "@northern.tech/common-ui#build": {
      "dependsOn": [
        "@northern.tech/store#build"
      ]
    },
    "@northern.tech/store#build": {
      "dependsOn": [
        "@northern.tech/utils#build"
      ]
    },
    "lint": {
      "dependsOn": [
        "build",
        "@northern.tech/store#build",
        "@northern.tech/common-ui#build"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "pre-publish": {
      "dependsOn": [
        "build",
        "lint",
        "test"
      ]
    },
    "test": {
      "cache": true
    },
    "publish": {
      "dependsOn": [
        "build",
        "lint",
        "test"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
